<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Eat-Da-Burger</h1>
    <p class="lead">It's Burger Time!</p>
    <img src="assets/image/burger.jpg" alt="Burger">

<form class="create-burger">
  <div class="form-group">
    <label for="textinput">Enter burger name here.</label>
    <input type="text" class="form-control form-control-lg" id="burger" aria-describedby="text" placeholder="Burger Name Here!">
  <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
<br>
<hr>
<div class="row">
    <div class="col-6 col-md-4">Burgers to Devour!
      <ul>
  {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
    </div>
    <div class="col-6 col-md-4"></div>
    <div class="col-6 col-md-4">Devoured!
  <ul>
  {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-devour devoured=false}}
    {{/if}}
  {{/each}}
</ul>
    </div>
  </div>
  </div>
</div>